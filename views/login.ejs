<div class="simple-login-container">

    <!-- method는 테스트용으로 get으로 처리함, 나중에 post로 바꿔야함 -->
    <form accept-charset="UTF-8" role="form" method="get" action="/userwork/inquire_worksheet">
        <h2>Login Form</h2>
        <div class="row">
            <div class="col-md-12 form-group">
                <input type="text" class="form-control" placeholder="Username">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <input type="password" placeholder="Enter your Password" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <a href="/user/signup" class="btn btn-block btn-login">회원가입</a>
            </div>
            <div class="col-md-6 form-group">
                <input type="submit" class="btn btn-block btn-login" value="로그인">
            </div>
        </div>
    </form>
</div>