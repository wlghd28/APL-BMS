<div class="container">
    <div class="row d-flex justify-content-center mx-auto">
        <div class="col-md-6 col-xs-12 div-style">
        <form  accept-charset="UTF-8" role="form" method="POST" action="/user/signup">
            <div class="d-flex justify-content-center mx-auto main-label" style="margin: 50px 0 10px 0;">
                <h4>Sign Up</h4>
            </div>
            <div class="form-group">
                <input type="email" class="form-control text-box" id="email" aria-describedby="email" placeholder="Username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control text-box" id="password" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="confirm_password" class="form-control text-box" id="confirm_password" placeholder="Confirm Password">
            </div>
            <div class="form-group justify-content-center d-flex">
                <button type="submit" id="signup-btn" class="btn btn-danger button-submit">가입하기</button>
            </div>
        </form> 
    </div>
    </div>
</div>